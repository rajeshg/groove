{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "plugin:react-hooks/recommended"],
  "settings": {
    "react": {
      "version": "19.0"
    }
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error", "log"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".next",
    "build",
    "coverage",
    "drizzle",
    ".output",
    "*.min.js",
    "routeTree.gen.ts"
  ]
}
